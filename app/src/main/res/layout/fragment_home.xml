<?xml version="1.0" encoding="utf-8"?>

<!-- the fragment_home.xml layout is used in the HomeFragment to display a scrollable list of course items using a RecyclerView.
    The ConstraintLayout ensures the RecyclerView fills the entire screen. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar">

    <TextView
        android:id="@+id/txtWelcome"
        android:text="@string/welcome_to_ucc"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#f9f9f9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
