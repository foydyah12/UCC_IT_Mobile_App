<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="#ffffff"
    android:elevation="2dp">

    <TextView
        android:id="@+id/txtCourseCode"
        android:text="@string/course_code"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#003366"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtCourseName"
        android:text="@string/course_name"
        android:textSize="15sp"
        android:textColor="#222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtCourseCredits"
        android:text="@string/course_credits"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtCoursePrerequisites"
        android:text="@string/course_prerequisites"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtCourseDescription"
        android:text="@string/course_description"
        android:textSize="14sp"
        android:textColor="#555"
        android:paddingTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
